<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.myapplication2.MainActivity2">


    <EditText
        android:id="@+id/editNome"
        android:layout_width="348dp"
        android:layout_height="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nome do produto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="281dp"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editQuantidade"
        app:layout_constraintVertical_bias="0.672"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="290dp" />

    <EditText
        android:id="@+id/editQuantidade"
        android:layout_width="353dp"
        android:layout_height="71dp"
        android:layout_marginBottom="449dp"
        android:layout_marginEnd="170dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNome"
        app:layout_constraintVertical_bias="0.112"
        tools:text="Quantidade"
        android:layout_marginRight="170dp"
        android:layout_marginLeft="28dp" />

    <EditText
        android:id="@+id/editDTVal"
        android:layout_width="352dp"
        android:layout_height="63dp"
        android:layout_marginBottom="330dp"
        android:layout_marginEnd="168dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="date"
        android:text="Data de validade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editQuantidade"
        app:layout_constraintVertical_bias="0.293"
        android:layout_marginRight="168dp"
        android:layout_marginLeft="30dp" />

    <EditText
        android:id="@+id/editPreco"
        android:layout_width="351dp"
        android:layout_height="63dp"
        android:layout_marginBottom="74dp"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="PreÃ§o"
        app:layout_constraintBottom_toTopOf="@+id/btnCadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDTVal"
        app:layout_constraintVertical_bias="0.396"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="34dp" />

    <ImageButton
        android:id="@+id/btnFoto"
        android:layout_width="57dp"
        android:layout_height="48dp"
        android:layout_marginBottom="97dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCadastrar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPreco"
        app:layout_constraintVertical_bias="0.487"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_marginLeft="235dp" />

    <TextView
        android:id="@+id/mensagem"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="103dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnFoto"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPreco"
        app:layout_constraintVertical_bias="0.381"
        tools:text="Cadastrado"
        android:layout_marginRight="63dp"
        android:layout_marginLeft="112dp" />

    <Button
        android:id="@+id/buttonListar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="73dp"
        android:text="Listar pessoas"
        app:layout_constraintBottom_toTopOf="@+id/mensagem"
        app:layout_constraintEnd_toStartOf="@+id/btnFoto"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPreco"
        app:layout_constraintVertical_bias="0.606"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="58dp" />



</android.support.constraint.ConstraintLayout>
